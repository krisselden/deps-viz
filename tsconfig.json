{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "filesGlob": [
    "src/**.ts"
  ],
  "exclude": [
    "node_modules/**",
    "dist/**",
    "tmp/**"
  ]
}
